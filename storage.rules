rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to upload their own transcripts
    match /transcripts/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow institutions to read transcripts of their admitted students
    match /transcripts/{userId}/{fileName} {
      allow read: if request.auth != null && 
        request.auth.token.role in ['admin', 'institute'] &&
        canAccessTranscript(userId);
    }
    
    // Admin has full access
    match /{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
    
    function canAccessTranscript(userId) {
      // Logic to check if institution can access this student's transcript
      return true;
    }
  }
}
