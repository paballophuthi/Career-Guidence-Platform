rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }
    
    // Allow read access to institutions and courses for all authenticated users
    match /institutions/{institutionId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.role == 'admin' || 
         resource.data.ownerId == request.auth.uid);
    }
    
    match /courses/{courseId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        request.auth.token.role in ['admin', 'institute'];
    }
    
    // Applications - students can create, institutions can read their own
    match /applications/{applicationId} {
      allow create: if request.auth != null && request.auth.token.role == 'student';
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.studentId || 
         request.auth.token.role in ['admin', 'institute']);
    }
    
    // Admin has full access
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.role == 'admin';
    }
  }
}
